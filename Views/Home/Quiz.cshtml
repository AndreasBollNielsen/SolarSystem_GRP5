@model SolarSystem_GRP5.Models.ViewModels.QuizView


<link rel="stylesheet" href="~/css/quiz.css">
<button class="button" id="return">@Model.Resources.StringValues["lang.quiz.return"]</button>
<h1 id="title">@Model.Resources.StringValues["lang.quiz.title"]</h1>
<div class="background">
</div>

<!-- quiz-container -->
<div id="quiz-container">
    <!-- question container -->
    <div class="questions">
        <h2 id="question"></h2>
        <ol type="A">
            <li class="option"><span id="option0" onclick="calcScore(this)"></span></li>
            <li class="option1"><span id="option1" onclick="calcScore(this)"></span></li>
            <li class="option2"><span id="option2" onclick="calcScore(this)"></span></li>
            <li class="option3"><span id="option3" onclick="calcScore(this)"></span></li>
        </ol>
        <h4 id="stat"></h4>
    </div>

    <div class="buttons">
        <button type="button" class="next">@Model.Resources.StringValues["lang.quiz.next"]</button>
    </div>

</div>

<!-- scoreboard section -->
<div id="scoreboard">
    <img src="/logo.png" alt="">
    <h2 id="score-title">@Model.Resources.StringValues["lang.quiz.score"]</h2>
    <h2 id="score"></h2>
    <button type="button" id="score-btn" onclick="backToQuiz()">@Model.Resources.StringValues["lang.quiz.returnToQuiz"]</button>
    <button type="button" id="check-answer" onclick="checkAnswer()">@Model.Resources.StringValues["lang.quiz.checkAnswers"]</button>
</div>

<!-- answers section -->
<div id="answerBank">
    <h2>@Model.Resources.StringValues["lang.quiz.answer"] :</h2>
    <ol type="1" id="answers">
    </ol>
    <button type="button" id="score-btn" onclick="backToQuiz()">@Model.Resources.StringValues["lang.quiz.returnToQuiz"]</button>
</div>


<script type="text/javascript">

    var Name = '@Model.Quiz_list';
    var viewobject = '@Html.Raw(Json.Serialize(Model.Resources.StringValues))';

    var dict = JSON.parse(viewobject);
    console.log(dict["lang.quiz.question1"]);
   
   
</script>
<div class="Fullscreen" onclick="Full()">
    <h1>
        click to make fullscreen
    </h1>
</div>
<!-- javascript file source -->
<script src="~/js/Fullscreen.js"></script>
<script src="~/js/quiz.js"></script>